<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBackground">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ProgressBar
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/home_progressBar"
            android:layout_centerInParent="true"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/home_linear_layout"
        android:orientation="vertical"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#000"
            android:text="Recent Searches:"
            android:layout_marginTop="@dimen/viewSpacing4"
            android:layout_marginLeft="@dimen/sideBorder"
            android:textSize="@dimen/subheading3"/>
        <android.support.v7.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/sideBorder"
            android:id="@+id/recent_items">
        </android.support.v7.widget.RecyclerView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/sideBorder"
            android:layout_marginTop="@dimen/viewSpacing4"
            android:textColor="#000"
            android:text="High in Protein:"
            android:textSize="@dimen/subheading3"/>

        <android.support.v7.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/sideBorder"
            android:id="@+id/high_in_protein">
        </android.support.v7.widget.RecyclerView>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/viewSpacing4"
            android:layout_marginLeft="@dimen/sideBorder"
            android:textColor="#000"
            android:text="High calories:"
            android:textSize="@dimen/subheading3"/>

        <android.support.v7.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/sideBorder"
            android:id="@+id/high_energy">
        </android.support.v7.widget.RecyclerView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/viewSpacing4"
            android:layout_marginLeft="@dimen/sideBorder"
            android:textColor="#000"
            android:text=""
            android:textSize="@dimen/subheading3"/>

        <android.support.v7.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/sideBorder"
            android:id="@+id/user_added_foods">
        </android.support.v7.widget.RecyclerView>

    </LinearLayout>
    </RelativeLayout>

</ScrollView>