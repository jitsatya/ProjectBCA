<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/shopping_list_header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#80DFDFDF"
        >

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="10"
            android:padding="5dp"
            android:text="Items To Buy"
            android:textColor="@color/colorPrimary"
            android:textAlignment="center"
            android:layout_gravity="center"
            android:textSize="@dimen/subheading4"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:padding="5dp"
            android:textColor="@color/colorPrimary"
            android:text="Quantity (grams)"
            android:textAlignment="center"
            android:layout_gravity="center"
            android:textSize="@dimen/subheading4" />
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:id="@+id/separator"
        android:background="#50000000"
        android:layout_below="@id/shopping_list_header"/>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/shopping_list_items_recycleview"
        android:background="@color/light_orage_background"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/total_macros_relativeLayout"
        android:layout_below="@+id/separator"
        >

    </android.support.v7.widget.RecyclerView>
    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="#50000000"
        android:layout_below="@id/shopping_list_items_recycleview"/>
    <RelativeLayout
        android:id="@+id/total_macros_relativeLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#80DFDFDF"
        android:layout_alignParentBottom="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/total_macros_linearlayout"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="8"
                android:orientation="vertical"
                android:padding="@dimen/viewSpacing5">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#000"
                    android:layout_gravity="right"
                    android:text="Total Calories: "
                    android:textSize="@dimen/subheading4" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#000"
                    android:layout_gravity="right"
                    android:text="Total Protein: "
                    android:textSize="@dimen/subheading4" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#000"
                    android:layout_gravity="right"
                    android:text="Total Carbs: "
                    android:textSize="@dimen/subheading4" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#000"
                    android:layout_gravity="right"
                    android:text="Total Fat: "
                    android:textSize="@dimen/subheading4" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/total_macros_linearlayout"
                android:layout_weight="3"
                android:orientation="vertical"
                android:padding="@dimen/viewSpacing5">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/total_calories"
                    android:maxLines="1"
                    android:ellipsize="end"
                    android:text="0.00"
                    android:textSize="@dimen/subheading4" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/total_protein"
                    android:maxLines="1"
                    android:ellipsize="end"
                    android:text="0.00"
                    android:textSize="@dimen/subheading4" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/total_carbs"
                    android:text="0.00"
                    android:maxLines="1"
                    android:ellipsize="end"
                    android:textSize="@dimen/subheading4" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/total_fat"
                    android:maxLines="1"
                    android:ellipsize="end"
                    android:text="0.00"
                    android:textSize="@dimen/subheading4" />
            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>


</RelativeLayout>